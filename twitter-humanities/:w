require 'spec_helper'

describe TweetParser do
  let(:parser)    { TweetParser.new }

  before do
    VCR.insert_cassette 'twitter-humanities'
  end

  after do
    VCR.eject_cassette
  end

  describe "#add_tweets" do

    it "should return all elements" do
      parser.add_tweets.size.must_equal 100
    end
  end
  
  describe "#populate" do
    it "should return all elements" do
      parser.populate.size.must_equal 714
    end
  end
end
